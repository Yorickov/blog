extends ../layouts/app.pug

block content
  .container.mt-5
    div
      if posts.length > 0
        table.table.table-hover.table-bordered
          thead.thead-light.text-center
            tr
              th.py-3.px-5 Title
              th.py-3.px-4 Date
              th.py-3 Actions
          tbody
            each post in posts
              tr
                td.align-middle
                  a(href=url('posts#show', { id: post.id }))= post.title
                td.align-middle.text-center
                  | Date
                td.d-flex.justify-content-center.align-items-center
                  a.mx-2(href=url('posts#edit', { id: post.id })) Edit
                  a.mx-2(href=url('posts#destroy', { id: post.id }) data-method='delete') Delete
                  //- form.form-inline.d-inline-block(action=`/posts/${post.id}?_method=DELETE` method='post')
                  //-   button.btn.btn-primary.p-30(type='submit') Delete
      else
        p Пусто
