extends ../layouts/app.pug

block content
  div
    a(url=(href='root')) Main page
    if posts.length > 0
      table.table
        tr
          th.p-3 Title
          th.p-3 Actions
        for post in posts
          tr
            td.align-middle
              a(href=url('posts#show', { id: post.id }))= post.title
            td
              a.d-inline-block.p-2(href=url('posts#edit', { id: post.id })) Edit
              form.form-inline.d-inline-block(action=`/posts/${post.id}?_method=DELETE` method='post')
                button.btn.btn-primary.p-30(type='submit') Delete
    else
      p Пусто
